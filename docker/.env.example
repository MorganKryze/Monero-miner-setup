# Copy this file to .env and fill in your values

# Required: Your Monero wallet address
WALLET_ADDRESS=your_wallet_address_here

# Optional: Worker name (will be auto-generated if not specified)
WORKER_NAME=my_docker_miner

# Optional: Mining pool URL
POOL_URL=gulf.moneroocean.stream

# Optional: Donation level (0-5)
DONATE_LEVEL=0

# CPU Configuration
CPU_COUNT=2
CPU_PERCENT=75
MAX_THREADS_PERCENT=75

# Memory limit
MEMORY_LIMIT=1g

# Mining behavior
PAUSE_ON_BATTERY=false
PAUSE_ON_ACTIVE=false

# Random suffix for container name (leave empty for auto-generation)
RANDOM_SUFFIX=